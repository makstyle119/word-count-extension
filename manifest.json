{
  "name": "Word Count Extension",
  "version": "1.0",
  "manifest_version": 3,
  "description": "This extension allows you to select text on a web page and get a word count.",
  "permissions": ["activeTab"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Word Count Extension",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon_128.png"
    }
  }
}
